{
  "name": "caesar-cipher-toolkit",
  "version": "1.0.0",
  "description": "Caesar cipher toolkit for Node.js: encode messages, automatically decrypt using frequency analysis of letter patterns, word boundaries, and single-letter words. Multi-language support with customizable frequency profiles.",
  "main": "index.js",
  "bin": {
    "caesar": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "encode": "node index.js encode",
    "decode": "node index.js decode",
    "auto": "node index.js auto",
    "rot13": "node index.js rot13",
    "brute": "node index.js brute",
    "auto:french": "node index.js auto --language french",
    "auto:spanish": "node index.js auto --language spanish",
    "auto:german": "node index.js auto --language german",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "author": "Yann Troadec",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yanntroadec/caesar-cipher-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/yanntroadec/caesar-cipher-toolkit/issues"
  },
  "homepage": "https://github.com/yanntroadec/caesar-cipher-toolkit#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
